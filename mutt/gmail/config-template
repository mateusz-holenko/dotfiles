## Receive configuration
set imap_user    = "###gmail-uname###"
set imap_pass    = "###gmail-pass###"
set folder       = "imaps://###gmail-uname###@imap.gmail.com/"
set spoolfile    = +INBOX
set postponed    = +Drafts
set record       = +Sent
set ssl_starttls = yes

## Send configuration


## Cache & certificates configuration
set header_cache = ~/.mutt/gmail/headers
set message_cachedir = ~/.mutt/gmail/bodies
set certificate_file = ~/.mutt/gmail/certs

set imap_keepalive = 300
set mail_check = 120
