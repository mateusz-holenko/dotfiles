# Set default values for all following accounts.
defaults
tls on
#tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_certcheck off

# A freemail service
passwordeval 'secret-tool lookup cs password'
account cs-outlook
host smtp-mail.outlook.com
from `secret-tool lookup cs username`
auth on
user `secret-tool lookup cs username` 

# Set a default account
account default : cs-outlook
